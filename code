#include <iostream>
#include <string>

using namespace std;

int main() {
    // наши данные
    string upper = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    string lower = "abcdefghijklmnopqrstuvwxyz";
    string num = "1234567890";
    string symbol = "+_*&^%$#@!";
    string user;
    string password;
    
    char Lower, Upper, Numbers, Symbols ;
    
    // запрос юзеру и ++
    cout << "Do you want to include uppercase? y/n? : ";
    cin >> Upper;
    if (Upper == 'y') {
        user += upper;
    }
    
    cout << "Do you want to include lowercase? y/n? : ";
    cin >> Lower;
    if (Lower == 'y') {
        user += lower;
    }

    cout << "Do you want to include numbers? y/n? : ";
    cin >> Numbers;
    if (Numbers == 'y') {
        user += num;
    }
    
    cout << "Do you want to include symbols? y/n? : ";
    cin >> Symbols;
    if (Symbols == 'y') {
        user += symbol;
    }

    // размер пароля
    int minL, maxL;
    cout << "Enter minimum length of the password: ";
    cin >> minL;
    cout << "Enter maximum length of the password: ";
    cin >> maxL;
    
    //генератор чисел  
    srand(time(0));
    // пароль
    int length = rand() % (maxL - minL + 1) + minL;
    for(int i = 1; i <= length; i++) {
        password += user[rand() % user.size()];
    }

    cout << password << endl;


//  определяет сложность/легкость
    bool hasLower = Lower == 'y';
    bool hasUpper = Upper == 'y';
    bool hasNumbers = Numbers == 'y';
    bool hasSymbols = Symbols == 'y';

    if (password.size() >= 8 && hasNumbers && hasSymbols) {
        cout << "Password : strong" << endl;
    } else {
        cout << "Password : Easy" << endl;
    }
    
    return 0;
}

